<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item><layer-list>
    <item>
        <shape>
            <solid
                android:color="@color/primary_color_light">

            </solid>

            <corners android:radius="3dp" />

            <padding
                android:bottom="13dp"
