<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="#fff"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"
        android:layout_gravity="right"
        android:orientation="vertical">



            <TextView
                android:id="@+id/tvAddressLine1_AddressItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="fghhhjh"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>




        <TextView
            android:id="@+id/tvAddressLine2_AddressItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hffdss"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvMobileNumber_AddressItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="phone"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnSelectAddress"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/Select"
        android:textSize="15sp"
        android:layout_marginLeft="4dp"
        android:clickable="true"
        android:textColor="@color/primary_color_light"
        android:textStyle="bold"
        tools:ignore="ButtonStyle"
        android:background="@color/colorPrimary"
        />
</androidx.cardview.widget.CardView>